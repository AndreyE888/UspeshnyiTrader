            margin-left: auto;
        }

        .timeline-item:nth-child(even) .timeline-content {
            margin-right: auto;
        }

        .timeline-content::before {
            content: '';
            position: absolute;
            top: 20px;
            width: 20px;
            height: 20px;
            background: #3498db;
            border-radius: 50%;
        }

        .timeline-item:nth-child(odd) .timeline-content::before {
            left: -10px;
        }

        .timeline-item:nth-child(even) .timeline-content::before {
            right: -10px;
        }

        .contact-info {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 2rem;
        }

        .contact-item {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            padding: 1rem;
            background: white;
            border-radius: 10px;
            transition: all 0.3s ease;
