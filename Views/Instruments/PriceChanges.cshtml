            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            margin-bottom: 1.5rem;
        }

        .price-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .instrument-header {
            display: flex;
            align-items: center;
            padding: 1.5rem;
            border-bottom: 1px solid #e9ecef;
        }

        .instrument-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(135deg, #3498db, #2980b9);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            margin-right: 1rem;
        }

        .price-change {
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .price-change.positive {
            background: #d5f4e6;
            color: #27ae60;
        }

        .price-change.negative {
            background: #fadbd8;
            color: #e74c3c;
        }

        .price-change.neutral {
            background: #f8f9fa;
            color: #6c757d;
        }

        .price-history {
            padding: 1.5rem;
        }

        .history-table {
            width: 100%;
            border-collapse: collapse;
        }

        .history-table th {
            background: #f8f9fa;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            color: #2c3e50;
            border-bottom: 2px solid #e9ecef;
        }

        .history-table td {
            padding: 1rem;
            border-bottom: 1px solid #e9ecef;
        }

        .history-table tr:last-child td {
            border-bottom: none;
        }

        .history-table tr:hover {
            background: #f8f9fa;
        }

        .filters-section {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 15px;
            margin-bottom: 2rem;
        }

        .filter-btn {
            border: 2px solid #e9ecef;
            background: white;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            margin: 0 0.3rem 0.5rem 0;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .filter-btn:hover, .filter-btn.active {
            background: #3498db;
            color: white;
            border-color: #3498db;
        }

        .time-filter {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .stats-card {
            background: linear-gradient(135deg, #2c3e50, #34495e);
            color: white;
            padding: 1.5rem;
            border-radius: 15px;
            text-align: center;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .alert-badge {
            background: #e74c3c;
            color: white;
            padding: 0.2rem 0.6rem;
            border-radius: 10px;
            font-size: 0.7rem;
            margin-left: 0.5rem;
        }

        .price-comparison {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .old-price {
            text-decoration: line-through;
            color: #6c757d;
            font-size: 0.9rem;
        }

        .new-price {
            font-weight: 600;
            color: #2c3e50;
        }

        .change-arrow {
            font-size: 1.2rem;
        }

        .change-arrow.up {
            color: #27ae60;
        }

        .change-arrow.down {
            color: #e74c3c;
        }

        .notification-toggle {
            cursor: pointer;
            user-select: none;
        }

        .notification-bell {
            font-size: 1.5rem;
            transition: all 0.3s ease;
        }

        .notification-bell.active {
            color: #f39c12;
            animation: ring 1s ease-in-out;
        }

        @@keyframes ring {
            0%, 100% { transform: rotate(0deg); }
            25% { transform: rotate(15deg); }
            75% { transform: rotate(-15deg); }
        }

        .export-btn {
            background: linear-gradient(135deg, #27ae60, #2ecc71);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .export-btn:hover {
            background: linear-gradient(135deg, #229954, #27ae60);
            transform: translateY(-2px);
        }

        .last-update {
            background: #e8f4fd;
            border: 1px solid #bee5eb;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 2rem;
        }

        @@media (max-width: 768px) {
            .price-hero h1 {
