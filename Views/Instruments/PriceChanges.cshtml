@section Scripts {
    <script>
        let notificationsEnabled = false;

        // –§–∏–ª—å—Ç—Ä–∞—Ü–∏—è –∏–∑–º–µ–Ω–µ–Ω–∏–π
        function filterChanges(type) {
            const cards = document.querySelectorAll('.price-card');
            const filterBtns = document.querySelectorAll('.filter-btn');

            // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–µ –∫–Ω–æ–ø–∫–∏
            filterBtns.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            // –§–∏–ª—å—Ç—Ä—É–µ–º –∫–∞—Ä—Ç–æ—á–∫–∏
            cards.forEach(card => {
                if (type === 'all' || card.dataset.change === type) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–π
        function toggleNotifications() {
            notificationsEnabled = !notificationsEnabled;
            const bell = document.querySelector('.notification-bell');

            if (notificationsEnabled) {
                bell.classList.add('active');
                showNotification('–£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è –≤–∫–ª—é—á–µ–Ω—ã', 'success');
            } else {
                bell.classList.remove('active');
                showNotification('–£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è –æ—Ç–∫–ª—é—á–µ–Ω—ã', 'info');
            }
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ü–µ–Ω
        function refreshPrices() {
            const updateTime = document.getElementById('lastUpdateTime');
            updateTime.textContent = new Date().toLocaleString('ru-RU');

            showNotification('–î–∞–Ω–Ω—ã–µ –æ–±–Ω–æ–≤–ª–µ–Ω—ã', 'success');

            // –ò–º–∏—Ç–∞—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏
            updateStatistics();
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏
        function updateStatistics() {
            document.getElementById('risingInstruments').textContent =
                Math.floor(Math.random() * 5) + 13;
            document.getElementById('fallingInstruments').textContent =
                Math.floor(Math.random() * 4) + 6;
        }

        // –≠–∫—Å–ø–æ—Ä—Ç –¥–∞–Ω–Ω—ã—Ö
        function exportData(format) {
            showNotification(`–≠–∫—Å–ø–æ—Ä—Ç –≤ ${format.toUpperCase()} –Ω–∞—á–∞—Ç`, 'info');
            // –í —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–æ–µ–∫—Ç–µ –∑–¥–µ—Å—å –±—ã–ª –±—ã AJAX –∑–∞–ø—Ä–æ—Å
            setTimeout(() => {
                showNotification(`–§–∞–π–ª ${format}.${format} —Å–∫–∞—á–∞–Ω`, 'success');
            }, 2000);
        }

