<!-- Price Ticker (only show when logged in) -->
@if (Context.Session.GetInt32("UserId") != null)
{
    <div class="bg-light border-bottom py-1">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex overflow-auto">
                        <marquee behavior="scroll" direction="left" scrollamount="3">
                            <span class="me-4">
                                <strong>EUR/USD:</strong> 
                                <span id="ticker-eurusd" class="price-ticker">$1.0850</span>
                            </span>
                            <span class="me-4">
                                <strong>GBP/USD:</strong> 
                                <span id="ticker-gbpusd" class="price-ticker">$1.2650</span>
                            </span>
                            <span class="me-4">
                                <strong>BTC/USD:</strong> 
                                <span id="ticker-btcusd" class="price-ticker">$45,000.00</span>
                            </span>
                            <span class="me-4">
                                <strong>ETH/USD:</strong> 
                                <span id="ticker-ethusd" class="price-ticker">$2,500.00</span>
                            </span>
                            <span class="me-4">
                                <strong>XAU/USD:</strong> 
                                <span id="ticker-xauusd" class="price-ticker">$1,980.00</span>
                            </span>
                        </marquee>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        <span id="currentTime">@DateTime.Now.ToString("HH:mm:ss")</span>
                    </small>
                </div>
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function() {
        // Update user balance in navigation
        function updateNavBalance() {
            $.get('/Trading/GetUserBalance', function(data) {
                if (data.balance !== undefined) {
                    $('#navBalance').text(formatCurrency(data.balance));
                }
            });
        }

        // Update price ticker
        function updatePriceTicker() {
            $.get('/Instruments/GetPrices', function(prices) {
                // This would map instrument IDs to ticker symbols
                // For demo, we'll use static mapping
                $('#ticker-eurusd').text('$' + (prices[1] || 1.0850).toFixed(4));
                $('#ticker-gbpusd').text('$' + (prices[2] || 1.2650).toFixed(4));
                $('#ticker-btcusd').text('$' + (prices[4] || 45000).toFixed(2));
                $('#ticker-ethusd').text('$' + (prices[5] || 2500).toFixed(2));
                $('#ticker-xauusd').text('$' + (prices[6] || 1980).toFixed(2));
            });
        }

        // Update current time
        function updateCurrentTime() {
            $('#currentTime').text(new Date().toLocaleTimeString());
        }

        // Initialize if user is logged in
        @if (Context.Session.GetInt32("UserId") != null)
        {
            <text>
                updateNavBalance();
                updatePriceTicker();
                setInterval(updateNavBalance, 30000); // Update balance every 30 seconds
                setInterval(updatePriceTicker, 5000); // Update ticker every 5 seconds
                setInterval(updateCurrentTime, 1000); // Update time every second
            </text>
        }
    });
</script>