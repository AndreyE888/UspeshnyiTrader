@model List<UspeshnyiTrader.Models.Entities.Trade>
@using UspeshnyiTrader.Models.Entities @* Добавляем using для enum'ов *@
@{
    ViewData["Title"] = "Trade History";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Trade History</h1>
                <div class="btn-group">
                    <button class="btn btn-outline-primary active" data-filter="all">All Trades</button>
                    <button class="btn btn-outline-success" data-filter="completed">Completed</button>
                    <button class="btn btn-outline-danger" data-filter="cancelled">Cancelled</button>
                    <button class="btn btn-outline-warning" data-filter="active">Active</button>
                </div>
            </div>
            <p class="text-muted">Your complete trading history and performance statistics</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Trades</h6>
                            <h3 id="totalTrades">@Model.Count</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-bar fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Won Trades</h6>
                            <h3 id="wonTrades">@Model.Count(t => t.Status == TradeStatus.Completed && t.Profit > 0)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-trophy fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Lost Trades</h6>
                            <h3 id="lostTrades">@Model.Count(t => t.Status == TradeStatus.Completed && t.Profit <= 0)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-times-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Win Rate</h6>
                            @{
                                var wonTrades = Model.Count(t => t.Status == TradeStatus.Completed && t.Profit > 0);
                                var completedTrades = Model.Count(t => t.Status == TradeStatus.Completed);
                                var winRate = completedTrades > 0 ? (wonTrades * 100.0) / completedTrades : 0;
                            }
                            <h3 id="winRate">@winRate.ToString("F1")%</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-percentage fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Profit/Loss Summary -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h6>Total Invested</h6>
                    <h4 id="totalInvested" class="text-primary">$@Model.Sum(t => t.Amount).ToString("F2")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h6>Total Profit</h6>
                    @{
                        var totalProfit = Model.Where(t => t.Profit.HasValue).Sum(t => t.Profit.Value);
                    }
                    <h4 id="totalProfit" class="@(totalProfit >= 0 ? "text-success" : "text-danger")">
                        @(totalProfit >= 0 ? "+" : "")$@Math.Abs(totalProfit).ToString("F2")
                    </h4>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h6>Active Trades</h6>
                    <h4 id="activeTrades" class="text-warning">@Model.Count(t => t.Status == TradeStatus.Active)</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Trades Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Trade History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="historyTable">
                            <thead class="table-dark">
                            <tr>
                                <th>Date/Time</th>
                                <th>Instrument</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Entry Price</th>
                                <th>Exit Price</th>
                                <th>Profit</th>
                                <th>Duration</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var trade in Model)
                            {
                                var duration = trade.ClosedAt.HasValue ? (trade.ClosedAt.Value - trade.CreatedAt).TotalMinutes : 0;
                                var resultClass = trade.Profit > 0 ? "text-success" :
                                    trade.Profit < 0 ? "text-danger" : "text-muted";

                                <tr class="trade-row" data-status="@trade.Status.ToString().ToLower()">
                                    <td>
                                        <small>@trade.CreatedAt.ToString("MM/dd HH:mm")</small>
                                    </td>
                                    <td>
                                        <strong>@trade.Instrument?.Symbol</strong>
                                    </td>
                                    <td>
                                        @if (trade.Type == TradeType.Buy)
                                        {
                                            <span class="badge bg-success">BUY</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">SELL</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>$@trade.Amount.ToString("F2")</strong>
                                    </td>
                                    <td>
                                        <small>$@trade.EntryPrice.ToString("F4")</small>
                                    </td>
                                    <td>
                                        <small>@(trade.ExitPrice?.ToString("F4") ?? "-")</small>
                                    </td>
                                    <td>
                                        <strong class="@resultClass">
                                            @if (trade.Profit.HasValue)
                                            {
                                                @(trade.Profit > 0 ? "+" : "")@($"${trade.Profit.Value.ToString("F2")}")
                                            }
                                            else
                                            {
                                                <text>-</text>
                                            }
                                        </strong>
                                    </td>
                                    <td>
                                        <small>@(duration > 0 ? $"{duration:F0} min" : "Active")</small>
                                    </td>
                                    <td>
                                        @switch (trade.Status)
                                        {
                                            case TradeStatus.Active:
                                                <span class="badge bg-warning">ACTIVE</span>
                                                break;
                                            case TradeStatus.Completed:
                                                <span class="badge @(trade.Profit > 0 ? "bg-success" : "bg-danger")">
                                                    @(trade.Profit > 0 ? "WON" : "LOST")
                                                </span>
                                                break;
                                            case TradeStatus.Cancelled:
                                                <span class="badge bg-secondary">CANCELLED</span>
                                                break;
                                            default:
                                                <span class="badge bg-info">@trade.Status</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-history fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No Trade History</h4>
                            <p class="text-muted">You haven't made any trades yet.</p>
                            <a href="@Url.Action("Index", "Trading")" class="btn btn-primary">
                                <i class="fas fa-chart-line"></i> Start Trading
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            setupFilterButtons();
        });

        function setupFilterButtons() {
            $('[data-filter]').click(function() {
                const filter = $(this).data('filter');

                // Update active button
                $('[data-filter]').removeClass('active');
                $(this).addClass('active');

                // Filter rows
                if (filter === 'all') {
                    $('.trade-row').show();
                } else {
                    $('.trade-row').hide();
                    $(`.trade-row[data-status="${filter}"]`).show();
                }
            });
        }
    </script>
}