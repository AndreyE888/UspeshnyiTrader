<!-- Modal -->
<div class="modal" id="resultModal">
    <div class="modal-content">
        <div class="modal-icon success">‚úÖ</div>
        <h2 id="modalTitle">–°–¥–µ–ª–∫–∞ –æ—Ç–∫—Ä—ã—Ç–∞!</h2>
        <p id="modalMessage">–í–∞—à–∞ —Å–¥–µ–ª–∫–∞ —É—Å–ø–µ—à–Ω–æ —Ä–∞–∑–º–µ—â–µ–Ω–∞.</p>
        <button onclick="closeModal()" style="padding: 10px 20px; background: #3498db; color: white; border: none; border-radius: 5px; cursor: pointer; margin-top: 1rem;">
            –ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å —Ç–æ—Ä–≥–æ–≤–ª—é
        </button>
    </div>
</div>

<script>
    let currentPrice = @(ViewBag.CurrentPrice ?? 1.0850);
    let priceChange = 0.25;

    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ü–µ–Ω—ã –≤ —Ä–µ–∞–ª—å–Ω–æ–º –≤—Ä–µ–º–µ–Ω–∏
    function updatePrice() {
        const change = (Math.random() - 0.5) * 0.02; // ¬±1%
        currentPrice = currentPrice * (1 + change);
        priceChange = change * 100;

        document.getElementById('currentPrice').textContent = '$' + currentPrice.toFixed(4);
        document.getElementById('priceChange').textContent = (priceChange >= 0 ? '+' : '') + priceChange.toFixed(2) + '%';
        document.getElementById('priceChange').style.background = priceChange >= 0 ? '#d5f4e6' : '#fadbd8';
        document.getElementById('priceChange').style.color = priceChange >= 0 ? '#27ae60' : '#e74c3c';
    }

    // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Å—É–º–º—ã
    function setAmount(amount) {
        const input = document.getElementById('tradeAmount');
        const maxAmount = @ViewBag.UserBalance;
        input.value = Math.min(amount, maxAmount);
    }

    // –†–∞–∑–º–µ—â–µ–Ω–∏–µ —Å–¥–µ–ª–∫–∏
    async function placeTrade(direction) {
        const amount = parseFloat(document.getElementById('tradeAmount').value);
        const maxAmount = @ViewBag.UserBalance;

        if (amount < 1) {
            showModal('error', '–û—à–∏–±–∫–∞', '–ú–∏–Ω–∏–º–∞–ª—å–Ω–∞—è —Å—É–º–º–∞: $1');
            return;
        }

        if (amount > maxAmount) {
            showModal('error', '–û—à–∏–±–∫–∞', '–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —Å—Ä–µ–¥—Å—Ç–≤');
            return;
        }

        try {
            const response = await fetch('/Trading/PlaceOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    symbol: '@ViewBag.Symbol',
                    direction: direction,
                    amount: amount,
                    price: currentPrice
                })
            });

            const result = await response.json();

            if (result.success) {
                showModal('success', '–£—Å–ø–µ—Ö!', result.message);
                // –î–æ–±–∞–≤–ª—è–µ–º —Å–¥–µ–ª–∫—É –≤ —Å–ø–∏—Å–æ–∫
                addTradeToList('@ViewBag.Symbol', direction, amount);
            } else {
                showModal('error', '–û—à–∏–±–∫–∞', result.message);
            }
        } catch (error) {
            showModal('error', '–û—à–∏–±–∫–∞', '–û—à–∏–±–∫–∞ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è');
        }
    }

    // –ü–æ–∫–∞–∑–∞—Ç—å –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
    function showModal(type, title, message) {
        const modal = document.getElementById('resultModal');
        const icon = modal.querySelector('.modal-icon');
        const modalTitle = document.getElementById('modalTitle');
        const modalMessage = document.getElementById('modalMessage');

        icon.className = `modal-icon ${type}`;
        icon.textContent = type === 'success' ? '‚úÖ' : '‚ùå';
        modalTitle.textContent = title;
        modalMessage.textContent = message;
        modal.style.display = 'flex';
    }

    // –ó–∞–∫—Ä—ã—Ç—å –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
    function closeModal() {
        document.getElementById('resultModal').style.display = 'none';
    }

    // –î–æ–±–∞–≤–∏—Ç—å —Å–¥–µ–ª–∫—É –≤ —Å–ø–∏—Å–æ–∫
    function addTradeToList(symbol, direction, amount) {
        const tradesList = document.getElementById('tradesList');
        const isWin = Math.random() > 0.4; // 60% —à–∞–Ω—Å –≤—ã–∏–≥—Ä—ã—à–∞ –¥–ª—è –¥–µ–º–æ
        const payout = isWin ? amount * 0.8 : 0;

        const tradeItem = document.createElement('div');
        tradeItem.className = 'trade-item';
        tradeItem.innerHTML = `
            <span>${symbol}</span>
            <span class="trade-direction ${direction === 'up' ? 'direction-call' : 'direction-put'}">
                ${direction === 'up' ? '–í–í–ï–†–•' : '–í–ù–ò–ó'}
            </span>
            <span>$${amount}</span>
            <span style="color: ${isWin ? '#27ae60' : '#e74c3c'};">${isWin ? '+$' + payout : '-$' + amount}</span>
        `;

        tradesList.insertBefore(tradeItem, tradesList.firstChild);

        // –û–≥—Ä–∞–Ω–∏—á–∏–≤–∞–µ–º —Å–ø–∏—Å–æ–∫ 10 –ø–æ—Å–ª–µ–¥–Ω–∏–º–∏ —Å–¥–µ–ª–∫–∞–º–∏
        if (tradesList.children.length > 10) {
            tradesList.removeChild(tradesList.lastChild);
        }
    }

    // –û–±–Ω–æ–≤–ª—è–µ–º —Ü–µ–Ω—É –∫–∞–∂–¥—ã–µ 2 —Å–µ–∫—É–Ω–¥—ã
    setInterval(updatePrice, 2000);

    // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –ø–æ –∫–ª–∏–∫—É –≤–Ω–µ –µ–≥–æ
    document.getElementById('resultModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeModal();
        }
    });
</script>
</body>
</html>