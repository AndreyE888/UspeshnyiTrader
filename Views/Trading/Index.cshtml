    function updateTimerIfExists(tradeId, tradeData) {
        const timerElement = document.querySelector(`[data-trade-id="${tradeId}"] .trade-timer`);
        if (timerElement && tradeData.timeRemaining > 0) {
            const minutes = Math.floor(tradeData.timeRemaining / 60);
