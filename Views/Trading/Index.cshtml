    function updateTradeDisplay(tradeId, tradeData) {
        const tradeElement = document.querySelector(`[data-trade-id="${tradeId}"]`);

        if (!tradeElement) return;

        // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç—É—Å
        const statusElement = tradeElement.querySelector('.trade-status');
        if (statusElement) {
            if (tradeData.isWin) {
                statusElement.textContent = '–í—ã–∏–≥—Ä—ã—à üéâ';
                statusElement.className = 'trade-status text-success fw-bold';
                // –î–æ–±–∞–≤–ª—è–µ–º –∞–Ω–∏–º–∞—Ü–∏—é
                statusElement.classList.add('animate__animated', 'animate__pulse');
            } else {
                statusElement.textContent = '–ü—Ä–æ–∏–≥—Ä—ã—à üíî';
                statusElement.className = 'trade-status text-danger';
            }
        }

        // –û–±–Ω–æ–≤–ª—è–µ–º –ø—Ä–∏–±—ã–ª—å
        const profitElement = tradeElement.querySelector('.trade-profit');
        if (profitElement) {
            if (tradeData.isWin) {
                profitElement.textContent = `+$${tradeData.profit?.toFixed(2) || '0.00'}`;
                profitElement.className = 'trade-profit text-success fw-bold';
