    // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –¥–∞–Ω–Ω—ã—Ö –¥–ª—è –≥—Ä–∞—Ñ–∏–∫–∞
    function generatePriceData() {
        const data = [];
        let price = currentPrice;
        const now = new Date();

        for (let i = 100; i >= 0; i--) {
            const time = new Date(now - i * 60000);
            const change = (Math.random() - 0.5) * 0.002;
            price = price * (1 + change);

            data.push({
                x: time,
                y: price
            });
        }

        return data;
    }

    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ü–µ–Ω—ã –≤ —Ä–µ–∞–ª—å–Ω–æ–º –≤—Ä–µ–º–µ–Ω–∏
    function startRealTimeUpdates() {
        setInterval(() => {
            if (priceChart) {
                const datasets = priceChart.data.datasets[0].data;
                const lastPoint = datasets[datasets.length - 1];
                const newTime = new Date(lastPoint.x.getTime() + 60000);

                const change = (Math.random() - 0.5) * 0.001;
                const newPrice = lastPoint.y * (1 + change);

                currentPrice = newPrice;
                updatePriceDisplay(newPrice, change);

                datasets.push({
                    x: newTime,
                    y: newPrice
                });

                if (datasets.length > 100) {
                    datasets.shift();
                }

                priceChart.update('none');
            }
        }, 3000);
    }

    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Ü–µ–Ω—ã
    function updatePriceDisplay(price, change) {
        const priceElement = document.getElementById('currentPriceDisplay');
        const changeElement = document.getElementById('priceChangeDisplay');

        priceElement.textContent = '$' + price.toFixed(4);
        const changePercent = (change * 100).toFixed(2);
        changeElement.textContent = (change >= 0 ? '+' : '') + changePercent + '%';
        changeElement.style.background = change >= 0 ? '#d5f4e6' : '#fadbd8';
        changeElement.style.color = change >= 0 ? '#27ae60' : '#e74c3c';
    }

