    // –î–æ–±–∞–≤–∏—Ç—å —Å–¥–µ–ª–∫—É –≤ —Å–ø–∏—Å–æ–∫ - –û–ë–ù–û–í–õ–ï–ù–ù–ê–Ø –í–ï–†–°–ò–Ø
    function addTradeToList(symbol, direction, amount, tradeId) {
        const tradesList = document.getElementById('tradesList');
        const durationValue = parseFloat(document.getElementById('durationSelect').value);
        const durationSeconds = Math.round(durationValue * 60);

        const tradeItem = document.createElement('div');
        tradeItem.className = 'trade-item';
        tradeItem.id = `trade-${tradeId}`;
        tradeItem.dataset.tradeId = tradeId; // ‚Üê –í–ê–ñ–ù–û: –¥–æ–±–∞–≤–ª—è–µ–º data-trade-id

        const displayTime = durationSeconds < 60 ?
            `${durationSeconds} —Å–µ–∫` :
            `${durationValue} –º–∏–Ω`;

        tradeItem.innerHTML = `
        <span>${symbol}</span>
        <span class="trade-direction ${direction === 'up' ? 'direction-call' : 'direction-put'}">
            ${direction === 'up' ? '–í–í–ï–†–•' : '–í–ù–ò–ó'}
        </span>
        <span>$${amount}</span>
        <span id="result-${tradeId}" style="color: #3498db;">
            ‚è≥ ${displayTime}
        </span>
    `;

        tradesList.insertBefore(tradeItem, tradesList.firstChild);

        if (tradesList.children.length > 10) {
            tradesList.removeChild(tradesList.lastChild);
        }

        // –¢–∞–π–º–µ—Ä –æ–±—Ä–∞—Ç–Ω–æ–≥–æ –æ—Ç—Å—á–µ—Ç–∞
        let timeLeft = durationSeconds;
        const timerInterval = setInterval(() => {
            timeLeft--;
            const resultSpan = document.getElementById(`result-${tradeId}`);

            if (!resultSpan) {
                clearInterval(timerInterval);
                return;
            }

            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                resultSpan.textContent = 'üìä –†–∞—Å—á–µ—Ç...';
                resultSpan.style.color = '#f39c12';
            } else {
                if (durationSeconds < 60) {
                    resultSpan.textContent = `‚è≥ ${timeLeft} —Å–µ–∫`;
                } else {
                    const minutes = Math.floor(timeLeft / 60);
                    const seconds = timeLeft % 60;
                    resultSpan.textContent = `‚è≥ ${minutes}:${seconds.toString().padStart(2, '0')}`;
                }
            }
        }, 1000);
    }

    async function checkTradeResult(tradeId, symbol, direction, amount) {
        try {
            const response = await fetch(`/Trading/GetTradeResult?id=${tradeId}`);
            const result = await response.json();

            const resultSpan = document.getElementById(`result-${tradeId}`);
            if (!resultSpan) return;

            if (result.success && result.status === 'Completed') {
                if (result.isWin) {
                    resultSpan.textContent = `‚úÖ +$${result.payout}`;
                    resultSpan.style.color = '#27ae60';
                    showNotification(`–í—ã–∏–≥—Ä—ã—à! +$${result.profit}`, 'success');
                } else {
                    resultSpan.textContent = `‚ùå -$${amount}`;
                    resultSpan.style.color = '#e74c3c';
                    showNotification(`–ü—Ä–æ–∏–≥—Ä—ã—à -$${amount}`, 'error');
                }

                // –û–±–Ω–æ–≤–ª—è–µ–º –±–∞–ª–∞–Ω—Å
                updateBalance(result.newBalance);
            } else if (result.status === 'Active') {
                // –ï—Å–ª–∏ —Å–¥–µ–ª–∫–∞ –µ—â–µ –Ω–µ –∑–∞–∫—Ä—ã–ª–∞—Å—å –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ
                resultSpan.textContent = '‚è≥ –û–∂–∏–¥–∞–Ω–∏–µ —Å–µ—Ä–≤–µ—Ä–∞...';
                setTimeout(() => checkTradeResult(tradeId, symbol, direction, amount), 3000);
            }
        } catch (error) {
            console.error('–û—à–∏–±–∫–∞ –ø—Ä–æ–≤–µ—Ä–∫–∏:', error);
            const resultSpan = document.getElementById(`result-${tradeId}`);
            if (resultSpan) {
                resultSpan.textContent = '‚ùå –û—à–∏–±–∫–∞';
                resultSpan.style.color = '#e74c3c';
            }
        }
    }

