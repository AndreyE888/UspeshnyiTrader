<script>
    let currentPrice = @ViewBag.CurrentPrice.ToString().Replace(",", ".");
    let priceChange = 0.25;
    let priceChart;
    let currentTimeFrame = '15m';

    // Investing.com —Å–∏–º–≤–æ–ª—ã –¥–ª—è –ø–∞—Ä—Å–∏–Ω–≥–∞
    const investingSymbols = {
        'EURUSD': 'eur-usd',
        'GBPUSD': 'gbp-usd',
        'USDJPY': 'usd-jpy',
        'USDCHF': 'usd-chf',
        'AUDUSD': 'aud-usd',
        'USDCAD': 'usd-cad',
        'BTCUSD': 'bitcoin',
        'ETHUSD': 'ethereum',
        'XAUUSD': 'gold'
    };

    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –≥—Ä–∞—Ñ–∏–∫–∞
    function initializeChart() {
        const ctx = document.getElementById('priceChart').getContext('2d');
        const data = generatePriceData();

        priceChart = new Chart(ctx, {
            type: 'line',
            data: {
                datasets: [{
                    label: '@ViewBag.SelectedSymbol',
                    data: data,
                    borderColor: '#27ae60',
                    backgroundColor: 'rgba(39, 174, 96, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        callbacks: {
                            label: function(context) {
                                return `–¶–µ–Ω–∞: $${context.parsed.y.toFixed(4)}`;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        type: 'time',
                        time: {
                            unit: 'minute'
                        },
                        grid: {
                            color: 'rgba(255,255,255,0.1)'
                        },
                        ticks: {
                            color: '#fff'
                        }
                    },
                    y: {
                        grid: {
                            color: 'rgba(255,255,255,0.1)'
                        },
                        ticks: {
                            color: '#fff',
                            callback: function(value) {
                                return '$' + value.toFixed(4);
                            }
                        }
                    }
                },
                interaction: {
                    intersect: false,
                    mode: 'nearest'
                }
            }
        });

        document.getElementById('chartLoading').style.display = 'none';
        startRealTimeUpdates();
    }

    // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –¥–∞–Ω–Ω—ã—Ö –¥–ª—è –≥—Ä–∞—Ñ–∏–∫–∞
    function generatePriceData() {
        const data = [];
        let price = currentPrice;
        const now = new Date();

        for (let i = 100; i >= 0; i--) {
            const time = new Date(now - i * 60000);
            const change = (Math.random() - 0.5) * 0.002;
            price = price * (1 + change);

            data.push({
                x: time,
                y: price
            });
        }

        return data;
    }

    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ü–µ–Ω—ã –≤ —Ä–µ–∞–ª—å–Ω–æ–º –≤—Ä–µ–º–µ–Ω–∏
    function startRealTimeUpdates() {
        setInterval(() => {
            if (priceChart) {
                const datasets = priceChart.data.datasets[0].data;
                const lastPoint = datasets[datasets.length - 1];
                const newTime = new Date(lastPoint.x.getTime() + 60000);

                const change = (Math.random() - 0.5) * 0.001;
                const newPrice = lastPoint.y * (1 + change);

                currentPrice = newPrice;
                updatePriceDisplay(newPrice, change);

                datasets.push({
                    x: newTime,
                    y: newPrice
                });

                if (datasets.length > 100) {
                    datasets.shift();
                }

                priceChart.update('none');
            }
        }, 3000);
    }

    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Ü–µ–Ω—ã
    function updatePriceDisplay(price, change) {
        const priceElement = document.getElementById('currentPriceDisplay');
        const changeElement = document.getElementById('priceChangeDisplay');

        priceElement.textContent = '$' + price.toFixed(4);
        const changePercent = (change * 100).toFixed(2);
        changeElement.textContent = (change >= 0 ? '+' : '') + changePercent + '%';
        changeElement.style.background = change >= 0 ? '#d5f4e6' : '#fadbd8';
        changeElement.style.color = change >= 0 ? '#27ae60' : '#e74c3c';
    }

    // –°–º–µ–Ω–∞ —Ç–∞–π–º—Ñ—Ä–µ–π–º–∞
    function changeTimeFrame(timeFrame) {
        currentTimeFrame = timeFrame;
        document.querySelectorAll('.time-frames .amount-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        event.target.classList.add('active');

        // –ó–¥–µ—Å—å –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –ª–æ–≥–∏–∫—É –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö –ø–æ–¥ –≤—ã–±—Ä–∞–Ω–Ω—ã–π —Ç–∞–π–º—Ñ—Ä–µ–π–º
    }

    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ü–µ–Ω –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–æ–≤
    function updateInstrumentPrices() {
        Object.keys(investingSymbols).forEach(symbol => {
            const priceElement = document.getElementById('price_' + symbol);
            if (priceElement) {
                const change = (Math.random() - 0.5) * 0.01;
                const price = currentPrice * (1 + change);
                priceElement.textContent = '$' + price.toFixed(4);
                priceElement.style.color = change >= 0 ? '#27ae60' : '#e74c3c';
            }
        });
    }

    // –í—ã–±–æ—Ä –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–∞
    function selectInstrument(symbol) {
        window.location.href = `/Trading?symbol=${symbol}`;
    }

    // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Å—É–º–º—ã
    function setAmount(amount) {
        const input = document.getElementById('tradeAmount');
        const maxAmount = @ViewBag.UserBalance.ToString(System.Globalization.CultureInfo.InvariantCulture);
        input.value = Math.min(amount, maxAmount);
    }

    // –ü–æ–∫–∞–∑–∞—Ç—å –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
    function showModal(type, title, message) {
        const modal = document.getElementById('resultModal');
        const icon = modal.querySelector('.modal-icon');
        const modalTitle = document.getElementById('modalTitle');
        const modalMessage = document.getElementById('modalMessage');

        icon.className = `modal-icon ${type}`;
        icon.textContent = type === 'success' ? '‚úÖ' : '‚ùå';
        modalTitle.textContent = title;
        modalMessage.textContent = message;
        modal.style.display = 'flex';
    }

    // –ó–∞–∫—Ä—ã—Ç—å –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
    function closeModal() {
        document.getElementById('resultModal').style.display = 'none';
    }

    // –î–æ–±–∞–≤–∏—Ç—å —Å–¥–µ–ª–∫—É –≤ —Å–ø–∏—Å–æ–∫
    function addTradeToList(symbol, direction, amount) {
        const tradesList = document.getElementById('tradesList');
        const isWin = Math.random() > 0.4;
        const payout = isWin ? amount * 0.8 : 0;

        const tradeItem = document.createElement('div');
        tradeItem.className = 'trade-item';
        tradeItem.innerHTML = `
            <span>${symbol}</span>
            <span class="trade-direction ${direction === 'up' ? 'direction-call' : 'direction-put'}">
                ${direction === 'up' ? '–í–í–ï–†–•' : '–í–ù–ò–ó'}
            </span>
            <span>$${amount}</span>
            <span style="color: ${isWin ? '#27ae60' : '#e74c3c'};">${isWin ? '+$' + payout : '-$' + amount}</span>
        `;

        tradesList.insertBefore(tradeItem, tradesList.firstChild);

        if (tradesList.children.length > 10) {
            tradesList.removeChild(tradesList.lastChild);
        }
    }

    async function placeTrade(direction) {
        console.log("–†–∞–∑–º–µ—â–µ–Ω–∏–µ —Å–¥–µ–ª–∫–∏:", direction);
        const amount = parseFloat(document.getElementById('tradeAmount').value);
        const maxAmount = @ViewBag.UserBalance.ToString(System.Globalization.CultureInfo.InvariantCulture);
        const durationMinutes = parseInt(document.getElementById('durationSelect').value);

        if (amount < 1) {
            showModal('error', '–û—à–∏–±–∫–∞', '–ú–∏–Ω–∏–º–∞–ª—å–Ω–∞—è —Å—É–º–º–∞: $1');
            return;
        }

        if (amount > maxAmount) {
            showModal('error', '–û—à–∏–±–∫–∞', '–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —Å—Ä–µ–¥—Å—Ç–≤');
            return;
        }

        try {
            const response = await fetch('/Trading/PlaceOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    symbol: '@ViewBag.SelectedSymbol',
                    direction: direction,
                    amount: amount,
                    price: currentPrice,
                    durationMinutes: durationMinutes
                })
            });

            const result = await response.json();

            if (result.success) {
                showModal('success', '–£—Å–ø–µ—Ö!', result.message);
                addTradeToList('@ViewBag.SelectedSymbol', direction, amount);
            } else {
                showModal('error', '–û—à–∏–±–∫–∞', result.message);
            }
        } catch (error) {
            showModal('error', '–û—à–∏–±–∫–∞', '–û—à–∏–±–∫–∞ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è');
        }
    }

    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(() => {
            initializeChart();
            updateInstrumentPrices();
            setInterval(updateInstrumentPrices, 5000);
        }, 1000);
    });

    // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –ø–æ –∫–ª–∏–∫—É –≤–Ω–µ –µ–≥–æ
    document.getElementById('resultModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeModal();
        }
    });
</script>
