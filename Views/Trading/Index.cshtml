        if (amount > maxAmount) {
            showModal('error', '–û—à–∏–±–∫–∞', '–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —Å—Ä–µ–¥—Å—Ç–≤');
            return;
        }

        try {
            const response = await fetch('/Trading/PlaceOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    symbol: '@ViewBag.SelectedSymbol',
                    direction: direction,
                    amount: amount,
                    price: currentPrice,
                    durationMinutes: durationMinutes
