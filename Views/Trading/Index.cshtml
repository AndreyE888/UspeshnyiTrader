    async function placeTrade(direction) {
        console.log("–†–∞–∑–º–µ—â–µ–Ω–∏–µ —Å–¥–µ–ª–∫–∏:", direction);
        const amount = parseFloat(document.getElementById('tradeAmount').value);
        const maxAmount = @ViewBag.UserBalance.ToString(System.Globalization.CultureInfo.InvariantCulture);
        const durationMinutes = parseInt(document.getElementById('durationSelect').value);

        if (amount < 1) {
            showModal('error', '–û—à–∏–±–∫–∞', '–ú–∏–Ω–∏–º–∞–ª—å–Ω–∞—è —Å—É–º–º–∞: $1');
            return;
