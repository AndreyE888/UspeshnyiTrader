            const result = await response.json();

            if (result.success) {
               
                // –î–æ–±–∞–≤–ª—è–µ–º –∫–∞–∫ –û–ñ–ò–î–ê–Æ–©–£–Æ (–∞ –Ω–µ —Å—Ä–∞–∑—É —Å —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–º!)
                addTradeToList('@ViewBag.SelectedSymbol', direction, amount, result.tradeId);
            } else {
                showModal('error', '–û—à–∏–±–∫–∞', result.message);
