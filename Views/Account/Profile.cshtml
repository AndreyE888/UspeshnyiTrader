@model UspeshnyiTrader.Models.Entities.User
@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Profile Header -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Account Profile</h4>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center"
                                 style="width: 80px; height: 80px; font-size: 2rem;">
                                @Model.Username[0].ToString().ToUpper()
                            </div>
                        </div>
                        <div class="col-md-10">
                            <h3 class="mb-1">@Model.Username</h3>
                            <p class="text-muted mb-2">Member since @Model.CreatedAt.ToString("MMMM yyyy")</p>
                            <div class="d-flex gap-3">
                                <div>
                                    <small class="text-muted">Last Login</small>
                                    <div class="fw-bold">@Model.LastLogin.ToString("MMM dd, yyyy HH:mm")</div>
                                </div>
                                <div>
                                    <small class="text-muted">Account ID</small>
                                    <div class="fw-bold">#@Model.Id.ToString("D6")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Balance & Stats -->
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Account Balance</h5>
                        </div>
                        <div class="card-body text-center">
                            <div class="balance-display display-4 fw-bold text-success mb-3">
                                @Model.Balance.ToString("C")
                            </div>
                            <div class="row text-center">
                                <div class="col-6">
                                    <small class="text-muted">Today's P/L</small>
                                    <div class="fw-bold text-success">+$0.00</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Total Trades</small>
                                    <div class="fw-bold">@Model.Trades.Count</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Stats -->
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">Trading Statistics</h5>
                        </div>
                        <div class="card-body">
                            <div id="tradingStats">
                                <div class="text-center py-3">
                                    <div class="loading-spinner mx-auto mb-2"></div>
                                    <small class="text-muted">Loading statistics...</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Account Information -->
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0">Account Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Username</label>
                                <div class="form-control bg-light">@Model.Username</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email Address</label>
                                <div class="form-control bg-light">@Model.Email</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Member Since</label>
                                <div class="form-control bg-light">@Model.CreatedAt.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Last Login</label>
                                <div class="form-control bg-light">@Model.LastLogin.ToString("MMMM dd, yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Index", "Trading")" class="btn btn-primary">
                                    <i class="fas fa-chart-line"></i> Start Trading
                                </a>
                                <a href="@Url.Action("Index", "History")" class="btn btn-outline-primary">
                                    <i class="fas fa-history"></i> View History
                                </a>
                                <button class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#resetDemoModal">
                                    <i class="fas fa-redo"></i> Reset Demo Balance
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div id="recentActivity">
                        <div class="text-center py-3">
                            <div class="loading-spinner mx-auto mb-2"></div>
                            <small class="text-muted">Loading recent activity...</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reset Demo Balance Modal -->
<div class="modal fade" id="resetDemoModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reset Demo Balance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>This will reset your demo balance to <strong>$1,000</strong>. All your trade history will be preserved, but your current balance will be reset.</p>
                <p class="text-muted">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning" onclick="resetDemoBalance()">
                    <i class="fas fa-redo"></i> Reset Balance
                </button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function() {
            loadTradingStats();
            loadRecentActivity();
            // updateBalancePeriodically(); // Временно отключил
        });

        function loadTradingStats() {
            $.get('/History/GetStats')
                .done(function(stats) {
                    if (stats && !stats.error) {
                        const statsHtml = `
                            <div class="row text-center">
                                <div class="col-6 mb-3">
                                    <small class="text-muted">Total Trades</small>
                                    <div class="h4 fw-bold text-primary">${stats.totalTrades || 0}</div>
                                </div>
                                <div class="col-6 mb-3">
                                    <small class="text-muted">Win Rate</small>
                                    <div class="h4 fw-bold text-success">${stats.winRate ? (stats.winRate * 100).toFixed(1) : 0}%</div>
                                </div>
                                <div class="col-6 mb-3">
                                    <small class="text-muted">Won Trades</small>
                                    <div class="h4 fw-bold text-success">${stats.wonTrades || 0}</div>
                                </div>
                                <div class="col-6 mb-3">
                                    <small class="text-muted">Lost Trades</small>
                                    <div class="h4 fw-bold text-danger">${stats.lostTrades || 0}</div>
                                </div>
                                <div class="col-12">
                                    <small class="text-muted">Total Profit/Loss</small>
                                    <div class="h4 fw-bold ${(stats.profitLoss || 0) >= 0 ? 'text-success' : 'text-danger'}">
                                        ${(stats.profitLoss || 0) >= 0 ? '+' : ''}${formatCurrency(stats.profitLoss || 0)}
                                    </div>
                                </div>
                            </div>
                        `;
                        $('#tradingStats').html(statsHtml);
                    } else {
                        showNoStats();
                    }
                })
                .fail(function() {
                    showNoStats();
                });
        }

        function showNoStats() {
            $('#tradingStats').html(`
                <div class="text-center py-3">
                    <i class="fas fa-chart-bar fa-2x text-muted mb-3"></i>
                    <p class="text-muted mb-0">Trading Statistics</p>
                    <small class="text-muted">Start trading to see your stats</small>
                </div>
            `);
        }

        function loadRecentActivity() {
            $.get('/History/GetUserHistory')
                .done(function(data) {
                    if (data && !data.error && data.length > 0) {
                        const recentTrades = data.slice(0, 5);
                        let activityHtml = '';

                        recentTrades.forEach(trade => {
                            const statusClass = trade.status === 'Won' ? 'text-success' :
                                trade.status === 'Lost' ? 'text-danger' : 'text-warning';
                            const directionIcon = trade.direction === 'Up' ? '▲' : '▼';
                            const directionClass = trade.direction === 'Up' ? 'text-success' : 'text-danger';

                            activityHtml += `
                                <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                    <div>
                                        <span class="${directionClass} fw-bold">${directionIcon} ${trade.instrumentSymbol}</span>
                                        <br>
                                        <small class="text-muted">${formatDateTime(trade.openTime)}</small>
                                    </div>
                                    <div class="text-end">
                                        <span class="fw-bold">${formatCurrency(trade.amount)}</span>
                                        <br>
                                        <small class="${statusClass}">${trade.status}</small>
                                    </div>
                                </div>
                            `;
                        });

                        $('#recentActivity').html(activityHtml);
                    } else {
                        showNoActivity();
                    }
                })
                .fail(function() {
                    showNoActivity();
                });
        }

        function showNoActivity() {
            $('#recentActivity').html(`
                <div class="text-center py-3">
                    <i class="fas fa-history fa-2x text-muted mb-3"></i>
                    <p class="text-muted mb-0">No recent activity</p>
                    <small class="text-muted">Start trading to see your history</small>
                </div>
            `);
        }

        function updateBalancePeriodically() {
            // Временно откомментировал - вызывает ошибки
            // setInterval(() => {
            //     $.get('/Trading/GetUserBalance', function(data) {
            //         if (data.balance !== undefined) {
            //             $('.balance-display').text(formatCurrency(data.balance));
            //         }
            //     });
            // }, 30000);
        }

        function resetDemoBalance() {
            if (confirm('Are you sure you want to reset your demo balance to $1,000?')) {
                showAlert('Demo balance reset feature would be implemented here', 'info');
                $('#resetDemoModal').modal('hide');
            }
        }
    </script>
}