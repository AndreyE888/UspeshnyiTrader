@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UspeshnyiTrader - Торговая платформа от Ефимова Андрея</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header */
        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1rem 0;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: bold;
            color: #4a5568;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo-icon {
            color: #667eea;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .nav-links a {
            text-decoration: none;
            color: #4a5568;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .nav-links a:hover {
            background: #667eea;
            color: white;
        }

        .btn-trading {
            background: linear-gradient(135deg, #48bb78, #38a169);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 4rem 0;
            color: white;
        }

        .hero h1 {
            font-size: 3.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .hero p {
            font-size: 1.3rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .stats {
            display: flex;
            justify-content: center;
            gap: 3rem;
            margin-top: 2rem;
        }

        .stat-item {
            background: rgba(255, 255, 255, 0.1);
            padding: 1.5rem;
            border-radius: 12px;
            backdrop-filter: blur(10px);
        }

        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            display: block;
        }

        /* Instruments Section */
        .instruments-section {
            background: white;
            border-radius: 20px;
            padding: 3rem;
            margin: 2rem 0;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            text-align: center;
            font-size: 2.2rem;
            margin-bottom: 2rem;
            color: #2d3748;
        }

        .instruments-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .instrument-card {
            background: #f7fafc;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .instrument-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border-color: #667eea;
        }

        .instrument-symbol {
            font-size: 1.5rem;
            font-weight: bold;
            color: #2d3748;
            margin-bottom: 0.5rem;
        }

        .instrument-price {
            font-size: 1.8rem;
            font-weight: bold;
            color: #48bb78;
            margin-bottom: 1rem;
        }

        .price-change {
            font-size: 0.9rem;
            color: #718096;
        }

        .btn-trade {
            background: #667eea;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
        }

        .btn-trade:hover {
            background: #5a67d8;
            transform: scale(1.05);
        }

        /* Features */
        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .feature-card {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        /* Footer */
        .footer {
            text-align: center;
            padding: 2rem 0;
            color: white;
            opacity: 0.8;
            margin-top: 3rem;
        }

        @@media (max-width: 768px) {
        .nav {
            flex-direction: column;
            gap: 1rem;
        }

        .hero h1 {
            font-size: 2.5rem;
        }

        .stats {
            flex-direction: column;
            gap: 1rem;
        }
        }
    </style>
</head>
<body>
<!-- Header -->
<header class="header">
    <div class="container">
        <nav class="nav">
            <div class="logo">
                <span class="logo-icon">📊</span>
                UspeshnyiTrader
            </div>
            <div class="nav-links">
                <a href="/">Главная</a>
                <a href="/Trading" class="btn-trading">📈 Начать торговлю</a>
            </div>
        </nav>
    </div>
</header>

<div class="container">
    <div class="quick-nav-buttons" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin: 2rem 0; padding: 0 20px;">
        <a href="@Url.Action("Index", "Instruments")" class="btn-nav" style="background: linear-gradient(135deg, #667eea, #764ba2); color: white; padding: 1.2rem; text-align: center; border-radius: 12px; text-decoration: none; font-weight: 600; font-size: 1.2rem; transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; gap: 10px;">
            📊 Все инструменты
        </a>
        <a href="@Url.Action("Index", "Trading")" class="btn-nav" style="background: linear-gradient(135deg, #48bb78, #38a169); color: white; padding: 1.2rem; text-align: center; border-radius: 12px; text-decoration: none; font-weight: 600; font-size: 1.2rem; transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; gap: 10px;">
            💼 Начать торговлю
        </a>
        <a href="@Url.Action("Login", "Account")" class="btn-nav" style="background: linear-gradient(135deg, #ed8936, #dd6b20); color: white; padding: 1.2rem; text-align: center; border-radius: 12px; text-decoration: none; font-weight: 600; font-size: 1.2rem; transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; gap: 10px;">
            👤 Мой аккаунт
        </a>
    </div>
</div>


<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <h1>Торговая платформа будущего от Успешного Трейдера Ефимова Андрея</h1>
        <p>Профессиональные инструменты для успешной торговли бинарными опционами</p>

        <div class="stats">
            <div class="stat-item">
                <span class="stat-number">24/7</span>
                <span>Торговля</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">50+</span>
                <span>Инструментов</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">98%</span>
                <span>Эффективность</span>
            </div>
        </div>
    </div>
</section>

<!-- Instruments Section -->
<div class="container">
    <section class="instruments-section">
        <h2 class="section-title">Популярные инструменты</h2>

     
        <div class="instruments-grid">
            @if (ViewBag.Instruments != null && ViewBag.Instruments.Count > 0)
            {
                foreach (var instrument in ViewBag.Instruments)
                {
                    <div class="instrument-card" onclick="tradeInstrument('@instrument.Symbol')">
                        <div class="instrument-symbol">@instrument.Symbol</div>
                        <div class="instrument-price">$@instrument.CurrentPrice.ToString("N4")</div>
                        <div class="price-change">+0.25%</div>
                        <button class="btn-trade">Торговать</button>
                    </div>
                }
            }
            else
            {
                <!-- Демо-инструменты если БД не доступна -->
                <div class="instrument-card" onclick="tradeInstrument('EURUSD')">
                    <div class="instrument-symbol">EUR/USD</div>
                    <div class="instrument-price">$1.0850</div>
                    <div class="price-change">+0.15%</div>
                    <button class="btn-trade">Торговать</button>
                </div>
                <div class="instrument-card" onclick="tradeInstrument('GBPUSD')">
                    <div class="instrument-symbol">GBP/USD</div>
                    <div class="instrument-price">$1.2650</div>
                    <div class="price-change">+0.32%</div>
                    <button class="btn-trade">Торговать</button>
                </div>
                <div class="instrument-card" onclick="tradeInstrument('USDJPY')">
                    <div class="instrument-symbol">USD/JPY</div>
                    <div class="instrument-price">¥148.50</div>
                    <div class="price-change">-0.18%</div>
                    <button class="btn-trade">Торговать</button>
                </div>
                <div class="instrument-card" onclick="tradeInstrument('XAUUSD')">
                    <div class="instrument-symbol">XAU/USD</div>
                    <div class="instrument-price">$2020.50</div>
                    <div class="price-change">+0.45%</div>
                    <button class="btn-trade">Торговать</button>
                </div>
            }
        </div>
    </section>

    <!-- Features -->
    <div class="features">
        <div class="feature-card">
            <div class="feature-icon">⚡</div>
            <h3>Мгновенное исполнение</h3>
            <p>Сделки исполняются за доли секунды</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">🛡️</div>
            <h3>Защита инвестиций</h3>
            <p>Продвинутые инструменты управления рисками</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">📱</div>
            <h3>Доступ везде</h3>
            <p>Торгуйте с любого устройства в любое время</p>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="footer">
    <div class="container">
        <p>&copy; 2024 UspeshnyiTrader. Все права защищены.</p>
    </div>
</footer>


<div style="background: #f8f9fa; padding: 10px; border-radius: 5px; margin: 10px 0;">
    @ViewBag.Message
</div>

<script>
    function tradeInstrument(symbol) {
        window.location.href = '/Trading/Trade?symbol=' + symbol;
    }

    // Анимация появления элементов
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.instrument-card');
        cards.forEach((card, index) => {
            card.style.animationDelay = (index * 0.1) + 's';
            card.classList.add('fade-in');
        });
    });
    
</script>
</body>
</html>