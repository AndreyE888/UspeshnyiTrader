        }

        .status-active { background: #d5f4e6; color: #27ae60; }
        .status-blocked { background: #fadbd8; color: #e74c3c; }
        .status-pending { background: #ffeaa7; color: #e17055; }

        .balance-cell {
            font-weight: 600;
            color: #27ae60;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .btn-action {
            padding: 0.3rem 0.8rem;
            border: none;
            border-radius: 8px;
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-edit { background: #3498db; color: white; }
        .btn-block { background: #e74c3c; color: white; }
        .btn-unblock { background: #27ae60; color: white; }
        .btn-view { background: #f39c12; color: white; }

        .btn-action:hover {
            transform: translateY(-2px);
            opacity: 0.9;
        }

        .filters-section {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 15px;
            margin-bottom: 2rem;
        }

        .search-box {
            position: relative;
        }

        .search-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .search-input {
            padding-left: 3rem;
            border-radius: 25px;
        }

        .filter-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .filter-btn {
            border: 2px solid #e9ecef;
            background: white;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .filter-btn:hover, .filter-btn.active {
            background: #3498db;
            color: white;
            border-color: #3498db;
        }

        .user-details-modal .modal-content {
            border-radius: 15px;
            border: none;
        }

        .user-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1rem;
            margin: 1.5rem 0;
        }

        .user-stat-card {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 10px;
            text-align: center;
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: bold;
            color: #2c3e50;
        }

        .stat-label {
            font-size: 0.8rem;
            color: #6c757d;
        }

        .trades-list {
            max-height: 300px;
            overflow-y: auto;
        }

        .trade-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.8rem;
            border-bottom: 1px solid #e9ecef;
        }

        .trade-item:last-child {
            border-bottom: none;
        }

        .trade-success { color: #27ae60; }
        .trade-failure { color: #e74c3c; }

        @@media (max-width: 768px) {
            .action-buttons {
                flex-direction: column;
            }

            .users-hero h1 {
                font-size: 2rem;
            }

            .table-responsive {
                font-size: 0.9rem;
            }
        }
    </style>
}

